# Azure Speech 설정 (STT/TTS)
AZURE_SPEECH_API_KEY=your-api-key
AZURE_SPEECH_REGION=eastus
AZURE_SPEECH_ENDPOINT=https://your-region.stt.speech.microsoft.com

# ==========================================
# SuperTone API 설정
# ==========================================
SUPERTON_API_KEY=your-api-key
SUPERTON_VOICE_ID=your-voice-id

# ==========================================
# Wake Word & Sleep Mode 설정
# ==========================================
TRIGGER_WORDS=치피,시피
SLEEP_TIMEOUT=10.0

# ==========================================
# Azure OpenAI 설정
# ==========================================
AZURE_OPENAI_ENDPOINT=https://your-endpoint.openai.azure.com/
AZURE_OPENAI_API_KEY=your-api-key
AZURE_OPENAI_DEPLOYMENT_NAME=gpt-4o

# ==========================================
# Azure PostgreSQL 설정
# ==========================================
DB_HOST=your-db-host.postgres.database.azure.com
DB_PORT=5432
DB_NAME=your-db-name
DB_USER=your-db-user
DB_PASSWORD=your-db-password

# ==========================================
# 디바이스 시리얼 (앱에서 사용)
# ==========================================
DEVICE_SERIAL=your-device-serial

# ==========================================
# 사용자 이메일 (로그인한 사용자)
# ==========================================
USER_EMAIL=your-email@example.com

# ==========================================
# 시스템 프롬프트
# ==========================================
SYSTEM_PROMPT_JARVIS_4=your-prompt
SYSTEM_PROMPT_JARVIS_35=your-prompt
SYSTEM_PROMPT_TERMINAL=your-prompt
SYSTEM_PROMPT_CHIPI=your-prompt